{
  "compilerOptions": {
    /* ---- 基础 ---- */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    /* ---- Vite 官方推荐 ---- */
    "module": "ESNext",
    "moduleResolution": "node",

    /* ---- TypeScript 行为 ---- */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ---- React / Three / R3F 的类型 ---- */
//    "types": [
//      "vite/client",
//      "@react-three/fiber",
//      "three"
//    ],
//    "types": ["vite/client"],
//    "typeRoots": [
//      "./node_modules/@types",
//      // 这一行非常关键，确保 TypeScript 能找到 node_modules 中的类型
//      "./node_modules"
//    ],

    /* ---- 对 WebStorm 非常关键 ---- */
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },

  "include": ["src"]
}
